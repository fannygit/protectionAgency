@{
    Layout = "~/Views/Shared/_LayoutNews.cshtml";
}

<!-- content -->
<div class="contwar" id="contentText">
    <!--cntnav -->

    <div class="cntnav n1" id="contentText">
        <p>相關連結</p>
        <ul class="cntmenu">
            <li><a href="@Url.Action("WebLink")" title="重要連結" class="cntok"> 重要連結</a></li>

        </ul>
    </div>
    <!--cntnav end-->
    <!--content -->
    <div class="content" id="contentText">
        <h2><i class="fa fa-chevron-circle-right" aria-hidden="true"></i> 重要連結</h2><div class="reelink"><a href="#C" id="C" accesskey="C" title="中央內容區塊">:::　</a><a href="@Url.Action("Index")" title="首頁"><i class="fa fa-home" aria-hidden="true"></i> 首頁</a> &gt; 相關連結 &gt; 重要連結</div>
        <div class="datetab">
            <br>
            <div class="scroll tab400">
                <table width="100%" border="0" align="center" cellpadding="3" cellspacing="1" summary="此表格重要連結，表格分為二直欄，第一直欄連結，第二直欄標題">
                    <tbody>
                        <tr>
                            <th width="22%" scope="b">連結</th>
                            <th width="78%" nowrap scope="b">標題</th>
                        </tr>
                        @foreach (var item in Model.ImportantLinkLists)
                        {
                            <tr>
                                <td scope="c"><div align="center"><a href="@item.Url" title="@item.Title"><img src="@Url.Content("~/File/Get?FileId=" + item.BannerImg)" alt="@item.Title" class="linkimg"></a></div></td>
                                <td scope="a"><div align="left"><a href="@item.Url" title="@item.Title"><h3>@item.Title</h3></a></div></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @{
            @Html.Partial("_WBPager", (EPA.Project.WebSite.Models.PagerModel)Model)
        }
    </div>


</div>
