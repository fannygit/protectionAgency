@{
    Layout = "~/Views/Shared/_LayoutNews.cshtml";
}

<!-- content -->
<div class="contwar" id="contentText">
    <!--cntnav -->

    <div class="cntnav n1">
        <p>下載文件專區</p><a href="@Url.Action("download")" accesskey="L" title="左方導覽區塊">:::　</a>
        <ul style="list-style:none;" class="cntmenu">
            @foreach (var item in Model.RelatedFileDownloadList)
            {
                <li><a href="@Url.Action("download", new { download_id = item.Value })" title="@item.Text" class="@(item.Value.ToString() == Model.download_id ? "cntok" : "")"><i class="fa fa-angle-right" aria-hidden="true"></i> @item.Text</a></li>
            }
            @*<li><a href="download.html" title="會議資訊" class="cntok"><i class="fa fa-angle-right" aria-hidden="true"></i> 會議資訊</a></li>
            <li><a href="download.html" title="表單下載"><i class="fa fa-angle-right" aria-hidden="true"></i> 表單下載</a></li>
            <li><a href="download.html" title="技術手冊"><i class="fa fa-angle-right" aria-hidden="true"></i> 技術手冊</a></li>*@
        </ul>
    </div>
    <!--cntnav end-->
    <!--content -->
    <div class="content">
        <h1><i class="fa fa-chevron-circle-right" aria-hidden="true"></i> 下載文件專區<span> <a href="#" accesskey="C" title="中央內容區塊">:::　</a><a href="@Url.Action("Index")"><i class="fa fa-home" aria-hidden="true"></i> 首頁</a> &gt; 下載文件專區 </span></h1>
        <div class="datetab">
            <div class="scroll tab400">
                <table width="100%" border="0" align="center" cellpadding="3" cellspacing="1" summary="影像區編排表格">
                    <tbody>
                        <tr>
                            <th nowrap scope="b" class="">日期</th>
                            <th nowrap scope="b" class="">標題</th>
                            <th nowrap scope="b" class="">下載</th>
                        </tr>
                        @foreach (var i in Model.DownloadInfoList)
                        {
                            <tr>
                                <td scope="d">
                                    <div align="center" style="width:100px">@i.CreateTime.ToString("yyyy/MM/dd")</div>
                                </td>
                                <td scope="a"><div align="left"><a href="@Url.Content("~/File/Get?FileId=" + i.SubFile)" title="@i.SubTitle">@i.SubTitle</a></div></td>
                                <td align="center" scope="c"><a href="@Url.Content("~/File/Get?FileId=" + i.SubFile)" title="@i.SubTitle" class="gdown"><i class="fa fa-cloud-download " aria-hidden="true"></i> </a></td>
                            </tr>
                        }                        
                    </tbody>
                </table>
            </div>
        </div>
        @{
            @Html.Partial("_WBPager", (EPA.Project.WebSite.Models.PagerModel)Model)
        }
    </div>


</div>
