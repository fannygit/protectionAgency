                        @{
                            int index = 0;
                            foreach (var item in Model.NewsBulletinList)
                            {
                                index++;
                                <li><a href="@Url.Action("newslist", new { new_bulletin_id = item.Value })" title="@item.Text">1-@index @item.Text</a></li>
                            }
                        }
                    </ul>
                </li>
                <li class="dropdown in3">
                    <a href="@Url.Action("About")" data-toggle="dropdown" title="固定污染管制">　2. 固定污染管制<i class="icon-arrow"></i></a>
                    <ul class="dropdown-menu1">
                        @{
                            int index2 = 0;
                            foreach (var item in Model.FixedPollutionList)
                            {
                                index2++;
                                <li><a href="@Url.Action("About")" title="@item.Key.Text" >2-@index2 @item.Key.Text</a></li>
                            }
                        }
                    </ul>
                </li>
                <li class="dropdown in4">
                    <a href="#" data-toggle="dropdown" title="相關連結">　3. 相關連結</a>
